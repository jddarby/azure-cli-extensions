    "nfAgentMagicUAMIId": {
      "type": "string"
    },
    "scriptRunnerUAMIId": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "uksouth"
    },
    "utcValue": {
      "type": "string",
      "defaultValue": "[utcNow()]"
    },
    "roleGuid": {
      "type": "string",
      "defaultValue": "[newGuid()]"
